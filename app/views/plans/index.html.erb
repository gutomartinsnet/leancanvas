<% if false %>
<ul class="collection with-header">
  <% @plans.each do |plan| %>
    <li class="collection-item">
      <%= link_to "#{plan.title}", plan_path(plan) %>
    </li>
  <% end %>
</ul>
<% end %>
<%# if false %>
<div class="row">
<% @plans.each do |plan| %>

  <div class="card small col m6">
    <div class="card-image waves-effect waves-block waves-light">
        <%= image_tag plan.image.url if plan.image.url != nil %>
    </div>
    <div class="card-content">
      <span class="card-title activator grey-text text-darken-4"><%= plan.title %></span>
      <p><%= link_to "詳細を見る", plan_path(plan) %></p>
    </div>
  </div>
<% end %>
</div>  
<%# end %>